.breadcrumb-wrapper {
    display: block;
    padding: 7px 14px;
    border: 1px solid #ddd;
    border-radius: 3px;
    background: #fbfbfb;
    box-shadow: inset 0 1px 0 #fff;
    font-size: 12px;

    .item {
        &:last-child {
            .separator {
                display: none;
            }
        }

        a {
            color: #08c;
        }

        .separator {
            display: inline-block;
            font-family: Microsoft YaHei;
            margin: 0 8px 0 6px;
            color: #666;
            text-indent: 4px;
            font-weight: 400;
        }
    }
}
