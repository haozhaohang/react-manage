#root {
    height: 100%;

    .manage-wrapper {
        height: 100%;

        .manage-header {
            background: #fff;
            padding: 0;
        }

        .manage-containers {
            margin: 24px 16px;
            padding: 24px;
            background: #fff;
        }

        .trigger {
            font-size: 18px;
            line-height: 64px;
            padding: 0 16px;
            cursor: pointer;
            transition: color .3s;

            &:hover {
                color: #108ee9;
            }
        }

        .logo {
            height: 32px;
            background: #333;
            border-radius: 6px;
            margin: 16px;
        }

        .ant-layout-sider-collapsed .anticon {
            font-size: 16px;
        }

        .ant-layout-sider-collapsed .nav-text {
            display: none;
        }
    }
}
